<h1>Welcome, {{username}}</h1>
<div class="container">
	<h2>Friends</h2>
	<div class="row border border-2 rounded friends-row">
		{{#each friends as |friend|}}
			<div class="col-12">
				<h3>{{friend.username}}</h3>
				<button class="btn btn-primary challenge-btn" data-id="{{friend.id}}">Challenge</button>
			</div>
		{{/each}}
	</div>
</div>
<div class="container">
	<h2>Sent Friend Requests</h2>
	<div class="row border border-2 rounded friends-row">
		{{#each sentRequests as |sentRequest|}}
			<div class="col-12">
				<h3>{{sentRequest.username}}</h3>
				<button class="btn btn-primary cancel-btn" data-id="{{sentRequest.id}}">Cancel</button>
			</div>
		{{/each}}
	</div>
</div>
<div class="container">
	<h2>Incoming Friend Requests</h2>
	<div class="row border border-2 rounded friends-row">
		{{#each receivedRequests as |receivedRequest|}}
			<div class="col-12">
				<h3>{{receivedRequest.username}}</h3>
				<button class="btn btn-primary cancel-btn" data-id="{{receivedRequest.id}}">Decline</button>
			</div>
		{{/each}}
	</div>
</div>
<div class="container">
	<h2>Search for a user</h2>
	<input class="searchField" placeholder="username"></input>
	<button class="btn btn-success searchBtn">Search</button>
	<ul class="userList">

	</ul>
</div>

<script src="./js/profile.js"></script>